<div id='errorMessage'></div></br>
<%= form_with(model: @package, local: true, id: 'packageForm') do |form| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
        <% @package.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Nickname:" %><br>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label "Tracking Number:" %><br>
    <%= form.text_field :tracking %>
  </div>

  <div class="field">
    <%= form.label "Carrier:" %></br>
      <%= form.select :carrier, @carriers.keys, selected: @package.carrier, class: 'form-control col-md-1' %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Package', data: {disable_with: false}, class: 'btn btn-primary my-2' %>
  </div>
<% end %>
